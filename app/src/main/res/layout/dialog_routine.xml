<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/marginTop">

    <TextView
        android:id="@+id/routine_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.AppCompat.Headline"
        android:padding="@dimen/marginTopDouble"
        android:text="Add a new routine"/>

    <EditText
        android:id="@+id/routine_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginTop"
        android:hint="Enter title"
        app:layout_constraintTop_toBottomOf="@id/routine_dialog_header" />
</android.support.constraint.ConstraintLayout>